{
  "include": ["test/**/*.js"],
  "compilerOptions": {
    "noEmit": true,

    "allowJs": true,
    "checkJs": true,
  

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}
